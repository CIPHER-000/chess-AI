{
  "rules_directory": ".windsurf/rules",
  "mcp_directory": ".windsurf/mcp",
  "always_apply_rules": true,
  "rule_scope": {
    "include": [
      "code_generation",
      "test_generation",
      "debugging",
      "frontend_change",
      "api_integration"
    ],
    "exclude": [
      "file_restructure",
      "documentation",
      "non_feature_scripts"
    ]
  },
  "auto_load_mcp": true,
  "mcp_servers": [
    "./mcp/playwright.mcp.json",
    "./mcp/gpt5.mcp.json"
  ]
}
